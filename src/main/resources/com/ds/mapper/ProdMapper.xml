<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ds.mapper.ProdMapper">

	<insert id="insert">
        insert into tb_product
        values(#{pnum}, #{pname}, #{price}, #{quantity},#{snum})
	</insert>
	
	<select id="getList" resultType="com.ds.domain.ProdVO">
		select * from tb_product ORDER by pnum asc
	</select>
	
	<delete id="delete">
		delete from tb_product where pnum=#{pnum}
	</delete>
	<insert id="insertDB" parameterType="java.util.Map">
        INSERT INTO map_tbl
        VALUES(#{SID}, #{SNAME}, #{ADDRESS},#{LATITUDE},#{LONGITUDE})
    </insert>
	
	<update id="modify">
		update tb_product set
		pname=#{pname},
		price=#{price}, 
		quantity=#{quantity}
		where
		pnum=#{pnum}
	</update>
</mapper>